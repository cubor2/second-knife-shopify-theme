/*
 * SECOND KNIFE DESIGN SYSTEM
 * Système de tailles de texte standardisées
 * 
 * ⚠️  IMPORTANT : Lire DAWN-CSS-OVERRIDE-GUIDE.md avant toute modification !
 * 
 * RÉSUMÉ CRITIQUE :
 * - Dawn utilise body_scale=100 donc 1rem = 10px (pas 16px)
 * - Pour 14px utiliser 1.4rem (PAS 0.875rem qui donne 8.75px)
 * - Ce fichier contient 2 approches : propre + brutale en backup
 */

/* GOOGLE FONTS - Lora pour titres + IBM Plex Serif pour textes */
@import url('https://fonts.googleapis.com/css2?family=Lora:wght@400;500;600;700&family=IBM+Plex+Serif:wght@400;500;600;700&display=swap');

/* VARIABLES TAILLES DE TEXTE STANDARDISÉES */
:root {
  --sk-text-xs: 1rem;        /* 10px - très petits textes (avec body_scale=100) */
  --sk-text-sm: 1.2rem;      /* 12px - petits textes */
  --sk-text-base: 1.4rem;    /* 14px - textes normaux */
  --sk-text-lg: 1.6rem;      /* 16px - textes plus gros (réduit de 18px) */
}

/* OVERRIDE SIMPLE DES TAILLES DE DAWN */

/* Textes de base (rich-text, newsletter) - 14px */
.rich-text__text.rte,
.rich-text__text.rte p,
.newsletter__subheading.rte,
.newsletter__subheading.rte p {
  font-size: 1.4rem;
}

/* Textes du menu - 14px */
.header__menu-item.list-menu__item,
.header__menu-item span {
  font-size: 1.4rem;
}

/* CUSTOM PROPERTIES */
:root {
  --sk-border-width: 1px;
  --sk-border-color: 18, 18, 18;
  --sk-border-opacity: 1;
  --sk-spacing-base: 24px;

  --sk-border: var(--sk-border-width) solid rgba(var(--sk-border-color), var(--sk-border-opacity));
  
  --sk-space-1: calc(var(--sk-spacing-base) * 0.25);
  --sk-space-2: calc(var(--sk-spacing-base) * 0.5);
  --sk-space-3: var(--sk-spacing-base);
  --sk-space-4: calc(var(--sk-spacing-base) * 1.5);
  --sk-space-5: calc(var(--sk-spacing-base) * 2);

  --sk-font-heading: 'Lora', Georgia, serif;
  --sk-font-body: 'IBM Plex Serif', Georgia, serif;
  
  --sk-transition: 0.2s ease;

  /* STANDARDIZED TEXT SIZES - Only 4 sizes allowed */
  --sk-text-xs: 1rem;      /* 10px - très petits textes (copyright, mentions) */
  --sk-text-sm: 1.2rem;    /* 12px - petits textes (captions, métadonnées) */
  --sk-text-base: 1.4rem;  /* 14px - textes normaux (body, navigation) */
  --sk-text-lg: 1.8rem;    /* 18px - textes plus gros (sous-titres) */
}

/* SOLUTION CIBLÉE - ÉCRASE SEULEMENT LES TEXTES VOULUS */

/* RESET de Dawn text-body SEULEMENT pour les textes de contenu */
.text-body p,
.rte p,
.content-container p,
.page-width p {
  font-size: 1.4rem; /* 14px avec body_scale=100 */
  line-height: 1.6;
  font-family: 'IBM Plex Serif', Georgia, serif;
}

/* Navigation header 14px */
.header__menu-item,
.list-menu__item {
  font-size: 1.4rem; /* 14px avec body_scale=100 */
  line-height: 1.6;
  font-family: 'IBM Plex Serif', Georgia, serif;
}

/* Newsletter 14px */
.newsletter__subheading,
.newsletter__subheading p {
  font-size: 1.4rem; /* 14px avec body_scale=100 */
  line-height: 1.6;
  font-family: 'IBM Plex Serif', Georgia, serif;
}

/* Sections rich-text spécifiques (Philosophie + Gardez le fil) */
.shopify-section[id*="rich_text"] .rich-text__text p,
.shopify-section[id*="rich-text"] .rte p,
section[id*="rich_text"] .rich-text__text p,
section[id*="rich_text"] .rte p {
