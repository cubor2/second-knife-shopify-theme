/* ==========================================================================
   BEST MADE CO. INSPIRED SECTION SYSTEM - BLOCS ENCADRÉS
   ========================================================================== */

/* Conteneur principal avec bordures latérales fixes */
.sk-main-container {
  max-width: 120rem;
  margin: 0 auto;
  border-left: var(--sk-border);
  border-right: var(--sk-border);
  min-height: 100vh;
}

/* Chaque section devient un BLOC encadré */
.sk-section-block {
  border-bottom: var(--sk-border);
  padding: var(--sk-space-5) var(--sk-space-4);
  position: relative;
}

/* Première section - avec bordure top */
.sk-section-block:first-child {
  border-top: var(--sk-border);
}

/* Hero section - bloc principal */
.sk-hero-block {
  padding: calc(var(--sk-space-5) * 2) var(--sk-space-4);
  text-align: center;
  border-bottom: var(--sk-border);
}

/* Collection grid - inspiré Postevand avec bordures internes */
.sk-collection-block {
  padding: 0;
}

.sk-collection-block .collection-title {
  text-align: center;
  margin-bottom: var(--sk-space-3);
  padding-bottom: var(--sk-space-3);
  margin-left: var(--sk-space-4);
  margin-right: var(--sk-space-4);
}

.sk-collection-description {
  text-align: center;
  margin-bottom: var(--sk-space-4);
  max-width: 60rem;
  margin-left: auto;
  margin-right: auto;
  padding-left: var(--sk-space-4);
  padding-right: var(--sk-space-4);
}

/* Grille produits style Postevand - bordures entre les items */
.sk-product-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 0;
  border: var(--sk-border);
  border-left: none;
  border-right: none;
}

.sk-product-grid .card-wrapper {
  border-right: var(--sk-border);
  border-bottom: var(--sk-border);
  position: relative;
}

.sk-product-grid .card-wrapper:nth-child(3n) {
  border-right: none;
}

.sk-product-grid .card-wrapper:nth-last-child(-n+3) {
  border-bottom: none;
}

/* Card produit ultra minimaliste */
.sk-product-card {
  padding: 0;
  text-align: center;
  display: block;
  color: inherit;
  text-decoration: none;
  transition: background-color var(--sk-transition);
  height: 100%;
  display: flex;
  flex-direction: column;
}

.sk-product-card:hover {
  background-color: rgba(0, 0, 0, 0.02);
}

.sk-product-card__image-wrapper {
  margin-bottom: 0;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  border-bottom: var(--sk-border);
}

.sk-product-card__image {
  width: 100%;
  height: 420px;
  object-fit: cover;
  object-position: center;
  transition: transform 0.3s ease;
}

.sk-product-card:hover .sk-product-card__image {
  transform: scale(1.1);
}

.sk-product-card__image.placeholder-svg {
  height: 420px;
  width: 100%;
  background-color: #f8f8f8;
}

.sk-product-card__info {
  flex-shrink: 0;
  padding: var(--sk-space-3) var(--sk-space-2);
  background: white;
}

.sk-product-card__title {
  font-family: var(--sk-font-body);
  font-size: var(--sk-text-base);
  font-weight: 500;
  margin-bottom: var(--sk-space-1);
  line-height: 1.3;
  margin: 0 0 var(--sk-space-1) 0;
}

.sk-product-card__price {
  font-family: var(--sk-font-body);
  font-size: var(--sk-text-sm);
  color: rgba(var(--sk-border-color), 0.7);
}

.sk-product-card__compare-price {
  margin-left: var(--sk-space-1);
  opacity: 0.6;
}

/* View all button */
.sk-collection-view-all {
  text-align: center;
  margin-top: var(--sk-space-5);
  padding-top: var(--sk-space-4);
  padding-bottom: var(--sk-space-4);
  border-top: var(--sk-border);
  margin-left: var(--sk-space-4);
  margin-right: var(--sk-space-4);
}

/* Rich text sections - blocs de contenu */
.sk-text-block {
  padding: var(--sk-space-5) var(--sk-space-4);
  border-bottom: var(--sk-border);
  text-align: center;
}

.sk-text-block__title {
