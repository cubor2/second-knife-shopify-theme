/* Second Knife Typography System */

/* Import Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Figtree:wght@600;700;800&family=Work+Sans:wght@300;400;500;600&display=swap');

/* Figtree for Headings - 3 levels */
h1, .h1, .sk-heading-1 {
  font-family: var(--sk-font-heading-family);
  font-weight: 800;
  letter-spacing: var(--sk-letter-spacing-tight);
  line-height: var(--sk-line-height-tight);
}

h2, .h2, .sk-heading-2 {
  font-family: var(--sk-font-heading-family);
  font-weight: 700;
  letter-spacing: var(--sk-letter-spacing-tight);
  line-height: 1.2;
}

h3, .h3, .sk-heading-3 {
  font-family: var(--sk-font-heading-family);
  font-weight: 400;
  letter-spacing: -0.015em;
  line-height: 1.3;
}

/* Work Sans for body text */
body, 
p, 
.rte,
.sk-text,
button:not(.btn),
input,
textarea,
select {
  font-family: var(--sk-font-body-family);
  font-weight: 400;
  line-height: var(--sk-line-height-relaxed);
}

/* Text weight variations */
.sk-text--light {
  font-weight: 300;
}

.sk-text--regular {
  font-weight: 400;
}

.sk-text--medium {
  font-weight: 500;
}

.sk-text--semi-bold {
  font-weight: 600;
}

/* Special typography classes for Second Knife */
.sk-display {
  font-family: var(--sk-font-heading-family);
  font-weight: 800;
  font-size: clamp(2rem, 4vw, 4rem);
  letter-spacing: var(--sk-letter-spacing-tight);
  line-height: var(--sk-line-height-tight);
}

.sk-title {
  font-family: var(--sk-font-heading-family);
  font-weight: 700;
  font-size: clamp(1.5rem, 3vw, 2.5rem);
  letter-spacing: var(--sk-letter-spacing-tight);
  line-height: var(--sk-line-height-tight);
}

.sk-subtitle {
  font-family: var(--sk-font-heading-family);
  font-weight: 600;
  font-size: clamp(1.125rem, 2vw, 1.5rem);
  letter-spacing: -0.015em;
  line-height: 1.3;
}

.sk-body-large {
  font-family: var(--sk-font-body-family);
  font-weight: 400;
  font-size: clamp(1.125rem, 2vw, 1.25rem);
  line-height: var(--sk-line-height-relaxed);
}

.sk-body {
  font-family: var(--sk-font-body-family);
  font-weight: 400;
  font-size: 1rem;
  line-height: var(--sk-line-height-relaxed);
}

.sk-body-small {
  font-family: var(--sk-font-body-family);
  font-weight: 400;
  font-size: 0.875rem;
  line-height: var(--sk-line-height-normal);
}

.sk-caption {
  font-family: var(--sk-font-body-family);
  font-weight: 500;
  font-size: 0.75rem;
  line-height: 1.4;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

/* Text alignment utilities */
.sk-text-center {
  text-align: center;
}

.sk-text-left {
  text-align: left;
}

.sk-text-right {
  text-align: right;
}

/* Override Dawn's default typography when SK mode is enabled */
{% if settings.sk_enable_minimal_mode %}
.card__content h3,
.card__information h3,
.card-product__title {
  font-family: var(--sk-font-heading-family);
  font-weight: 400;
  letter-spacing: -0.01em;
  text-align: center;
}

.card__content p,
.card__information p,
.price {
  font-family: var(--sk-font-body-family);
  text-align: center;
}

.button, .btn {
  font-family: var(--sk-font-body-family);
  font-weight: 500;
  letter-spacing: 0.01em;
}
{% endif %} 