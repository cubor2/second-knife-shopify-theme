/* Second Knife Design System - Charte Graphique */

:root {
  /* ========================================
     SECOND KNIFE SETTINGS TO CSS VARIABLES
     ======================================== */
  --sk-border-width: {{ settings.sk_border_width | default: 1 }}px;
  --sk-border-color: {{ settings.sk_border_color.red | default: 18 }}, {{ settings.sk_border_color.green | default: 18 }}, {{ settings.sk_border_color.blue | default: 18 }};
  --sk-border-opacity: {{ settings.sk_border_opacity | default: 100 | divided_by: 100.0 }};
  --sk-base-unit: {{ settings.sk_content_spacing | default: 24 }}px;

  /* ========================================
     SPACING SYSTEM - RÈGLE : MULTIPLE DE 8
     ======================================== */
  --sk-space-0: 0;
  --sk-space-xs: calc(var(--sk-base-unit) * 0.25);   /* 6px si base=24 */
  --sk-space-sm: calc(var(--sk-base-unit) * 0.5);    /* 12px */
  --sk-space-md: var(--sk-base-unit);                /* 24px */
  --sk-space-lg: calc(var(--sk-base-unit) * 1.5);    /* 36px */
  --sk-space-xl: calc(var(--sk-base-unit) * 2);      /* 48px */
  --sk-space-xxl: calc(var(--sk-base-unit) * 3);     /* 72px */
  --sk-space-xxxl: calc(var(--sk-base-unit) * 4);    /* 96px */

  /* ========================================
     TYPOGRAPHY SYSTEM - ÉCHELLE MODULAIRE
     ======================================== */
  --sk-text-xs: 0.75rem;    /* 12px */
  --sk-text-sm: 0.875rem;   /* 14px */
  --sk-text-base: 1rem;     /* 16px */
  --sk-text-lg: 1.125rem;   /* 18px */
  --sk-text-xl: 1.25rem;    /* 20px */
  --sk-text-2xl: 1.5rem;    /* 24px */
  --sk-text-3xl: 1.875rem;  /* 30px */
  --sk-text-4xl: 2.25rem;   /* 36px */
  --sk-text-5xl: 3rem;      /* 48px */

  /* ========================================
     BORDER SYSTEM - COHÉRENCE TOTALE
     ======================================== */
  --sk-border: var(--sk-border-width) solid rgba(var(--sk-border-color), var(--sk-border-opacity));
  --sk-border-light: var(--sk-border-width) solid rgba(var(--sk-border-color), calc(var(--sk-border-opacity) * 0.3));
  --sk-border-subtle: var(--sk-border-width) solid rgba(var(--sk-border-color), calc(var(--sk-border-opacity) * 0.1));
  
  /* ========================================
     LAYOUT SYSTEM - CONTAINERS & GRIDS
     ======================================== */
  --sk-container-padding: var(--sk-space-md);
  --sk-section-padding-y: var(--sk-space-xl);
  --sk-section-padding-y-lg: var(--sk-space-xxxl);
  --sk-grid-gap: var(--sk-space-md);
  --sk-card-padding: var(--sk-space-md);

  /* ========================================
     COLOR SYSTEM - MINIMAL PALETTE
     ======================================== */
  --sk-color-white: #ffffff;
  --sk-color-black: #121212;
  --sk-color-gray-50: #fafafa;
  --sk-color-gray-100: #f4f4f5;
  --sk-color-gray-200: #e4e4e7;
  --sk-color-gray-300: #d4d4d8;
  --sk-color-gray-400: #a1a1aa;
  --sk-color-gray-500: #71717a;
  --sk-color-gray-600: #52525b;
  --sk-color-gray-700: #3f3f46;
  --sk-color-gray-800: #27272a;
  --sk-color-gray-900: #18181b;

  /* ========================================
     ANIMATION SYSTEM - TIMING UNIFORME
     ======================================== */
  --sk-transition-fast: 0.15s ease;
  --sk-transition-normal: 0.2s ease;
  --sk-transition-slow: 0.3s ease;
  --sk-ease-out: cubic-bezier(0.25, 0.46, 0.45, 0.94);
  --sk-ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);

{% if settings.sk_enable_minimal_mode %}
  /* ========================================
     DAWN OVERRIDE - COHÉRENCE FORCÉE
     ======================================== */
  --product-card-border-width: var(--sk-border-width);
  --collection-card-border-width: var(--sk-border-width);
  --blog-card-border-width: var(--sk-border-width);
  --text-boxes-border-width: var(--sk-border-width);
  --media-border-width: var(--sk-border-width);
  
  --product-card-border-opacity: var(--sk-border-opacity);
  --collection-card-border-opacity: var(--sk-border-opacity);
  --blog-card-border-opacity: var(--sk-border-opacity);
  --text-boxes-border-opacity: var(--sk-border-opacity);
  
  --product-card-corner-radius: 0;
  --collection-card-corner-radius: 0;
  --blog-card-corner-radius: 0;
  --text-boxes-radius: 0;
  --media-radius: 0;
  --buttons-radius: 0;
  
  --product-card-shadow-opacity: 0;
  --collection-card-shadow-opacity: 0;
  --blog-card-shadow-opacity: 0;
  --text-boxes-shadow-opacity: 0;
  --media-shadow-opacity: 0;
  
  --product-card-text-alignment: center;
  --collection-card-text-alignment: center;
  --blog-card-text-alignment: center;
  
  /* ESPACEMENT GRILLE UNIFORME */
  --spacing-grid-horizontal: var(--sk-grid-gap);
  --spacing-grid-vertical: var(--sk-grid-gap);
  --spacing-sections-desktop: var(--sk-section-padding-y);
  --spacing-sections-mobile: var(--sk-section-padding-y);
{% endif %}
}

/* ========================================
   RESPONSIVE BREAKPOINTS - SYSTÈME UNIFORME
   ======================================== */
@media (max-width: 749px) {
  :root {
    --sk-container-padding: var(--sk-space-sm);
    --sk-section-padding-y: var(--sk-space-lg);
    --sk-section-padding-y-lg: var(--sk-space-xl);
    --sk-grid-gap: var(--sk-space-sm);
    --sk-card-padding: var(--sk-space-sm);
  }
}

{% unless settings.sk_enable_animations %}
/* DÉSACTIVATION ANIMATIONS */
:root {
  --sk-transition-fast: 0ms !important;
  --sk-transition-normal: 0ms !important;
  --sk-transition-slow: 0ms !important;
}

* {
  transition: none !important;
  animation: none !important;
}
{% endunless %} 