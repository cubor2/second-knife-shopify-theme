{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-list-menu.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    background-color: black;
    color: white;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
      background-color: black;
      color: white;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .footer__content-main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  @media screen and (min-width: 750px) {
    .footer__content-main {
      grid-template-columns: repeat(4, 1fr);
      gap: 3rem;
    }
  }



  .footer h2 {
    color: white;
  }

  .footer .link {
    color: white;
  }

  .footer .link:hover {
    color: rgba(255, 255, 255, 0.75);
  }

  .footer__separator {
    height: 1px;
    background-color: white;
    margin: 2rem 0;
  }

  .footer__copyright {
    text-align: center;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.75);
    line-height: 1.4;
    margin-top: 6rem;
  }

  .footer__copyright a {
    color: rgba(255, 255, 255, 0.75);
    text-decoration: none;
  }

  .footer__copyright a:hover {
    color: white;
    text-decoration: underline;
    text-underline-offset: 0.3rem;
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="footer__content-top page-width">
    <div class="footer__content-main">
      <!-- About Column -->
      <div class="footer__column">
        <h2 class="h2">About</h2>
        <ul class="footer-block__details-content list-unstyled">
          <li>
            <a href="/pages/our-story" class="link link--text list-menu__item list-menu__item--link">Our story</a>
          </li>
          <li><a href="/pages/faq" class="link link--text list-menu__item list-menu__item--link">FAQ</a></li>
          <li>
            <a href="/pages/contact-us" class="link link--text list-menu__item list-menu__item--link">Contact us</a>
          </li>
        </ul>
      </div>

      <!-- Support Column -->
      <div class="footer__column">
        <h2 class="h2">Support</h2>
        <ul class="footer-block__details-content list-unstyled">
          <li>
            <a href="/pages/knife-sharpening-guide" class="link link--text list-menu__item list-menu__item--link"
              >Knife sharpening guide</a
            >
          </li>
          <li>
            <a href="/pages/knife-care-guide" class="link link--text list-menu__item list-menu__item--link"
              >Knife care guide</a
            >
          </li>
          <li>
            <a href="/pages/find-perfect-knife" class="link link--text list-menu__item list-menu__item--link"
              >Find the perfect knife</a
            >
          </li>
        </ul>
      </div>

      <!-- Shop Column -->
      <div class="footer__column">
        <h2 class="h2">Shop</h2>
        <ul class="footer-block__details-content list-unstyled">
          <li>
            <a href="/collections/santoku-knives" class="link link--text list-menu__item list-menu__item--link"
              >Santoku knives</a
            >
          </li>
          <li>
            <a href="/collections/gyuto-knives" class="link link--text list-menu__item list-menu__item--link"
              >Guyoto Knives</a
            >
          </li>
          <li>
            <a href="/collections/nakiri-knives" class="link link--text list-menu__item list-menu__item--link"
              >Nakiri Knives</a
            >
          </li>
        </ul>
      </div>

      <!-- Connect Column -->
      <div class="footer__column">
        <h2 class="h2">Connect</h2>
        <ul class="footer-block__details-content list-unstyled">
          <li><a href="/blogs/news" class="link link--text list-menu__item list-menu__item--link">Our blog</a></li>
          <li>
            <a href="/pages/newsletter" class="link link--text list-menu__item list-menu__item--link">The newsletter</a>
          </li>
          <li>
            <a
              href="https://instagram.com/secondknife"
              target="_blank"
              class="link link--text list-menu__item list-menu__item--link"
              >Instagram</a
            >
          </li>
        </ul>
      </div>
    </div>

    <!-- Separator -->
    <div class="footer__separator"></div>

    <!-- Copyright -->
    <div class="footer__copyright caption">
      <p>
        &copy; {{ 'now' | date: '%Y' }}, Second Knife Powered by
        <a href="https://shopify.com" target="_blank">Shopify</a> - <a href="/pages/cookies">Cookies</a> -
        <a href="/pages/mentions-legales">Mentions l√©gales</a>
      </p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ]
}
{% endschema %}
