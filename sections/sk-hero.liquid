{{ 'sk-design-system.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .sk-hero-fullscreen-{{ section.id }} {
    min-height: 100vh;
    width: 100vw;
    margin-left: calc(50% - 50vw);
    margin-right: calc(50% - 50vw);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    padding: 0;
    scroll-margin-top: 0;
    {% if section.settings.image != blank %}
      background-image: url('{{ section.settings.image | image_url: width: 2400 }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {% endif %}
  }

  .sk-hero-fullscreen-{{ section.id }} .sk-hero__content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 900px;
    padding: var(--sk-space-5) var(--sk-space-4);
    color: {{ section.settings.text_color }};
  }

  .sk-hero-fullscreen-{{ section.id }} .sk-hero__content::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 180%;
    height: 150%;
    background: radial-gradient(
      ellipse 65% 40% at center,
      rgba(255, 255, 255, {{ section.settings.gradient_opacity | divided_by: 100.0 | times: 1.1 }}) 0%,
      rgba(255, 255, 255, {{ section.settings.gradient_opacity | divided_by: 100.0 | times: 0.85 }}) 30%,
      rgba(255, 255, 255, {{ section.settings.gradient_opacity | divided_by: 100.0 | times: 0.5 }}) 60%,
      rgba(255, 255, 255, 0) 100%
    );
    z-index: -1;
    filter: blur(60px);
  }

  .sk-hero-fullscreen-{{ section.id }} .sk-hero__title {
    font-size: clamp(3.5rem, 7vw, 6rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: var(--sk-space-3);
    font-family: var(--sk-font-heading);
    opacity: 0;
    animation: fadeInUp 1s ease-out 0.3s forwards;
  }

  .sk-hero-fullscreen-{{ section.id }} .sk-hero__subtitle {
    font-size: clamp(1.4rem, 2vw, 1.8rem);
    line-height: 1.6;
    margin-bottom: var(--sk-space-4);
    font-family: var(--sk-font-body);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0;
    animation: fadeInUp 1s ease-out 0.6s forwards;
  }

  .sk-hero-fullscreen-{{ section.id }} .sk-hero__actions {
    display: flex;
    gap: var(--sk-space-2);
    justify-content: center;
    flex-wrap: wrap;
    opacity: 0;
    animation: fadeInUp 1s ease-out 0.9s forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media screen and (max-width: 749px) {
    .sk-hero-fullscreen-{{ section.id }} .sk-hero__title {
      font-size: clamp(3rem, 10vw, 4.5rem);
    }
  }
{%- endstyle -%}

<div class="sk-hero-fullscreen sk-hero-fullscreen-{{ section.id }}" id="hero-section">
  <div class="sk-hero__content">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'heading' -%}
          <h1 class="sk-hero__title" {{ block.shopify_attributes }}>
            {{ block.settings.heading }}
          </h1>

        {%- when 'text' -%}
          <div class="sk-hero__subtitle" {{ block.shopify_attributes }}>
            {{ block.settings.text }}
          </div>

        {%- when 'button' -%}
          <div class="sk-hero__actions" {{ block.shopify_attributes }}>
            {%- if block.settings.button_label_1 != blank -%}
              <a
                href="{{ block.settings.button_link_1 }}"
                class="sk-button{% unless block.settings.button_style_secondary_1 %} sk-button--primary{% endunless %}"
              >
                {{ block.settings.button_label_1 | escape }}
              </a>
            {%- endif -%}
            {%- if block.settings.button_label_2 != blank -%}
              <a
                href="{{ block.settings.button_link_2 }}"
                class="sk-button{% if block.settings.button_style_secondary_2 %} sk-button--secondary{% else %} sk-button--primary{% endif %}"
              >
                {{ block.settings.button_label_2 | escape }}
              </a>
            {%- endif -%}
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

<script>
  if (window.location.pathname === '/' && !window.location.hash) {
    window.addEventListener('load', function() {
      setTimeout(function() {
        const heroSection = document.getElementById('hero-section');
        if (heroSection) {
          heroSection.scrollIntoView({ behavior: 'instant', block: 'start' });
        }
      }, 100);
    });
  }
</script>

{% render 'faq-schema-homepage' %}

{% schema %}
{
  "name": "SK Hero Fullscreen",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image d'arrière-plan (HERO.jpg)"
    },
    {
      "type": "range",
      "id": "gradient_opacity",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "%",
      "label": "Intensité du halo derrière le texte",
      "default": 80,
      "info": "Halo blanc uniquement derrière le texte (recommandé: 70-110%)"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur du texte",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Titre",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Crafted with Purpose",
          "label": "Titre principal"
        }
      ]
    },
    {
      "type": "text",
      "name": "Sous-titre",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Découvrez notre collection de couteaux artisanaux, conçus pour durer.</p>",
          "label": "Description"
        }
      ]
    },
    {
      "type": "button",
      "name": "Boutons",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label_1",
          "default": "Explorer la collection",
          "label": "Texte bouton 1"
        },
        {
          "type": "url",
          "id": "button_link_1",
          "label": "Lien bouton 1"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary_1",
          "default": false,
          "label": "Style secondaire (bouton 1)"
        },
        {
          "type": "text",
          "id": "button_label_2",
          "label": "Texte bouton 2 (optionnel)"
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "Lien bouton 2"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary_2",
          "default": true,
          "label": "Style secondaire (bouton 2)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SK Hero Fullscreen",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
