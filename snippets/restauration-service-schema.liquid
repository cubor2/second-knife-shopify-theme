            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Product",
              "name": "Deba ancien"
            }
          }
        ]
      }
    ]
  },
  "termsOfService": "Garantie affûtage gratuit pendant 1 an après restauration",
  "availableChannel": {
    "@type": "ServiceChannel",
    "serviceUrl": "{{ shop.url }}/pages/restauration-couteaux-japonais",
    "servicePostalAddress": {
      "@type": "PostalAddress",
      "addressCountry": "FR"
    }
  }
